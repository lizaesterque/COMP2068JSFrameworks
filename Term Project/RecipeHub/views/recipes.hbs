<!-- recipesList.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipes List</title>
</head>
<body>
    <a href="/recipes/add" class="add-recipe-button">Add New Recipe</a>
    <h1>Recipes List</h1>
    <ul>
        {{#each recipes}}
            <li><a href="/recipes/{{ this._id }}">{{ this.title }}</a></li>
        {{/each}}
    </ul>

</body>
</html>


